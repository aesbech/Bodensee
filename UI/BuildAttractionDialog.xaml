<Window x:Class="BodenseeTourismus.UI.BuildAttractionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Build Attraction" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#ECF0F1">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Step 1: Select City -->
        <TextBlock Grid.Row="0" Text="Step 1: Select City to Build In" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="CitiesPanel">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding DisplayText}"
                                Tag="{Binding CityName}"
                                Click="CityButton_Click"
                                Margin="0,5"
                                Padding="10"
                                HorizontalContentAlignment="Left"
                                Background="White"
                                BorderBrush="#BDC3C7"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Step 2: Select Attraction -->
        <TextBlock Grid.Row="2" Text="Step 2: Select Attraction from Market" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="AttractionsPanel">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding DisplayText}"
                                Tag="{Binding Attraction}"
                                Click="AttractionButton_Click"
                                Margin="0,5"
                                Padding="10"
                                HorizontalContentAlignment="Left"
                                Background="{Binding BackgroundBrush}"
                                Foreground="White"
                                BorderBrush="#BDC3C7"
                                IsEnabled="{Binding CanAfford}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Build" x:Name="BuildButton"
                    Width="100" Height="35" Margin="0,0,10,0"
                    Background="#2ECC71" Foreground="White"
                    IsEnabled="False"
                    Click="BuildButton_Click"/>
            <Button Content="Cancel" Width="100" Height="35"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
