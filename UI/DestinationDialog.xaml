<Window x:Class="BodenseeTourismus.UI.DestinationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Destination" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#ECF0F1">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select Destination" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="RoutesPanel">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,5" Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Destination button -->
                                <Button Grid.Row="0"
                                        Content="{Binding DestinationText}"
                                        Tag="{Binding Destination}"
                                        Click="DestinationButton_Click"
                                        Padding="15,10"
                                        HorizontalContentAlignment="Left"
                                        Background="#2ECC71"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="14"
                                        FontWeight="Bold"/>

                                <!-- Pass-through cities (if any) -->
                                <StackPanel Grid.Row="1" Margin="15,10" Visibility="{Binding PassThroughVisibility}">
                                    <TextBlock Text="Passes through:" FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                                    <ItemsControl ItemsSource="{Binding PassThroughCities}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" FontSize="11" Foreground="#7F8C8D" Margin="10,2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Cancel" Width="100" Height="35" HorizontalAlignment="Right" Margin="0,15,0,0"
                Click="CancelButton_Click"/>
    </Grid>
</Window>
