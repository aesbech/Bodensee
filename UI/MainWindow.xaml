            </Grid>
        </Border>
        
        <!-- Main Content Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>  <!-- Left Panel -->
                <ColumnDefinition Width="*"/>    <!-- Center Panel -->
                <ColumnDefinition Width="300"/>  <!-- Right Panel -->
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Players, Buses, Log -->
            <Border Grid.Column="0" Background="White" BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
                <DockPanel>
                    <!-- Players -->
                    <Border DockPanel.Dock="Top" Background="#ECF0F1" Padding="10" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Players" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ItemsControl x:Name="PlayersPanel">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" Padding="10" Margin="0,5" CornerRadius="5" BorderBrush="#BDC3C7" BorderThickness="1">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                    <TextBlock Text="Money: â‚¬" FontSize="12"/>
                                                    <TextBlock Text="{Binding Money}" FontSize="12" FontWeight="Bold" Margin="5,0,0,0"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Attractions: " FontSize="12"/>
                                                    <TextBlock Text="{Binding AttractionCount}" FontSize="12" FontWeight="Bold" Margin="5,0,0,0"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding AIInfo}" FontSize="10" Foreground="Gray" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                    
                    <!-- Buses -->
                    <Border DockPanel.Dock="Top" Background="#ECF0F1" Padding="10" Margin="5">
